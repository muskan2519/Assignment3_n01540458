@model Assignment3_n01540458.Models.Teacher
@{
    ViewBag.Title = "Update";
}


<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.TeacherId">Back</a>
    </nav>
    <h2>Fill in the details to update teacher information.</h2>
    <form method="POST" action="/Teacher/Update/@Model.TeacherId">
        <div class="inputField">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFname" required />
        </div>
        <div class="inputField">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLname" required />
        </div>
        <div class="inputField">
            <label for="TeacherEmpNo">Employee No:</label>
            <input type="text" id="TeacherEmpNo" pattern="[T][0-9]{3}" name="TeacherEmpNo" value="@Model.TeacherEmployeeNo" required />
        </div>
        <div class="inputField">
            <label for="TeacherSalary">Salary:</label>
            <input type="text" pattern="[0-9]+([\.][0-9]+)?" id="TeacherSalary" name="TeacherSalary" value="@Model.TeacherSalary" required />
        </div>
        <div class="inputField">
            <input type="submit" value="Update Teacher" />
        </div>
    </form>
</div>

